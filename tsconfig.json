{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "lib",
        "sourceMap": true,
        "target": "esnext",
        "strictNullChecks": true,
        "rootDir": "./"
    },
    "include": ["src/**/*", "tests/factories", "lambdas.ts"],
    "exclude": ["node_modules", "./lib/**/*"]

}
